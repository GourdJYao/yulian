<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace：必须与对应的接口全类名一致 id:必须与对应接口的某个对应的方法名一致 -->
<mapper namespace="com.yaojian.mapper.CoachMapper">

	<insert id="save" parameterType="Coach">
		insert into
		t_coach_info(coachname,coachcardnumber,coachcardimage,coachidcardnumber,coachidcardimage,coachdesc,coachdate)
		values(#{coachname},#{coachcardnumber},#{coachcardimage},#{coachidcardnumber},#{coachidcardimage},#{coachdesc},#{coachdate});
	</insert>

	<update id="update" parameterType="Coach">
		update t_coach_info set
		coachname=#{coachname},
		coachcardnumber=#{coachcardnumber},
		coachcardimage=#{coachcardnumber},
		coachidcardnumber=#{coachidcardnumber},
		coachidcardimage=#{coachidcardimage},
		coachdesc=#{coachdesc},
		coachdate=#{coachdate}
		where id=#{id}
	</update>

	<delete id="delete" parameterType="int">
		delete from t_coach_info where
		id=#{id}
	</delete>

	<!-- mybsits_config中配置的alias类别名,也可直接配置resultType为类路劲 -->
	<select id="findById" parameterType="int" resultType="Coach">
		select
		id,coachname,coachcardnumber,coachcardimage,coachidcardnumber,coachidcardimage,coachdesc,coachdate
		from t_coach_info where
		id=#{id};
	</select>

	<select id="findAll" resultType="Coach">
		select
		id,coachname,coachcardnumber,coachcardimage,coachidcardnumber,coachidcardimage,coachdesc,coachdate
		from t_coach_info;
	</select>

	<select id="findByCoach" parameterType="Coach" resultType="Coach">
		select
		id,coachname,coachcardnumber,coachcardimage,coachidcardnumber,coachidcardimage,coachdesc,coachdate
		from t_coach_info WHERE
		coachname=#{coachname} AND coachcardnumber=#{coachcardnumber};
	</select>
</mapper>