<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace：必须与对应的接口全类名一致 id:必须与对应接口的某个对应的方法名一致 -->
<mapper namespace="com.yaojian.mapper.FieldMapper">

	<insert id="save" parameterType="Field">
		insert into
		t_field_info(fieldname,fieldphoto,fieldaddress)
		values(#{fieldname},#{fieldphoto},#{fieldaddress})
	</insert>

	<update id="update" parameterType="Field">
		update t_field_info set
		id=#{id},fieldname=#{fieldname},fieldphoto=#{fieldphoto},fieldaddress=#{fieldaddress}
		where id=#{id}
	</update>

	<delete id="delete" parameterType="int">
		delete from t_field_info where
		id=#{id}
	</delete>

	<!-- mybsits_config中配置的alias类别名,也可直接配置resultType为类路劲 -->
	<select id="findById" parameterType="int" resultType="Field">
		select
		id,fieldname,fieldphoto,fieldaddress
		from t_field_info where
		id=#{id};
	</select>

	<select id="findAll" resultType="Field">
		select
		id,fieldname,fieldphoto,fieldaddress
		from t_field_info;
	</select>

</mapper>